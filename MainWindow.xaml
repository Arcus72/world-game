<Window x:Class="World_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:World_Game.ViewModels"
        mc:Ignorable="d"
        Title="World Game" Height="600" Width="900"
        ResizeMode="NoResize">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/world_map.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <ContentControl Content="{Binding Navigation.CurrentView}"/>
    </Grid>
</Window>
