<UserControl x:Class="World_Game.Views.UserTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Układ: 3 wiersze i 3 kolumny -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nagłówek -->
            <RowDefinition Height="*"/>
            <!-- Lista wyników -->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk na dole -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nagłówek, wyśrodkowany w kolumnie środkowej -->
        <TextBlock Text="Scoreboard"
               FontSize="30"
               Foreground="White"
               HorizontalAlignment="Center"
               Margin="10,30,10,10"
               FontWeight="Bold"
               Grid.Row="0" Grid.Column="1">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Tabela wyników (ListView), wyśrodkowana -->
        <Border Grid.Row="1" Grid.Column="1"
        Margin="20"
        MaxWidth="600"
        Padding="10"
        CornerRadius="8"
        Background="#FAFAFA"
        BorderBrush="Gray"
        BorderThickness="2">

            <ListView ItemsSource="{Binding UserScores}"
              Background="Transparent" SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Player" DisplayMemberBinding="{Binding PlayerName}" Width="150"/>
                        <GridViewColumn Header="Attempts" DisplayMemberBinding="{Binding Score}" Width="100"/>
                        <GridViewColumn Header="Game Time" DisplayMemberBinding="{Binding TimePlayed}" Width="150"/>
                        <GridViewColumn Header="Country" DisplayMemberBinding="{Binding CountryName}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>




        <!-- Przycisk Wstecz w lewym dolnym rogu -->
        <Button Content="Back"
            Grid.Row="2" Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Padding="10,5"
            Command="{Binding GoBackCommand}"/>
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="32" Grid.Row="2" VerticalAlignment="Center" Width="172" Fill="White"/>
        <Label Grid.Column="1" Content="Players:" HorizontalAlignment="Left" Margin="238,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding UniqueUsersCount, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Margin="290,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="109" TextAlignment="Center"/>
    </Grid>

</UserControl>
